@model List<ITStepShop.Models.Order>

<h2>Список відправлених замовлень</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ім'я клієнта</th>
            <th>Адреса</th>
            <th>Електронна пошта</th>
            <th>Телефон</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerName</td>
                <td>@order.Address</td>
                <td>@order.Email</td>
                <td>@order.Phone</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id">Деталі</a> |
                    <a asp-action="Edit" asp-route-id="@order.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@order.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
